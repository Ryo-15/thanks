<h2>ユーザー新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
    <div class="row">
      <div class="col-xs-2  space">
      <%= f.label :"（姓）" %>
      </div>
      <div class="col-xs-2  space">
        <%= f.text_field :last_name, autofocus: true %>
      </div>
      <div class="col-xs-2  space">
        <%= f.label :"（名）" %>
      </div>
      <div class="col-xs-2  space">
        <%= f.text_field :first_name , autofocus: true %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="row">
      <div class="col-xs-2  space">
        <%= f.label :"（セイ）" %>
        <%= f.text_field :last_name_kana %>
      </div>
      <div class="col-xs-2  space">
        <%= f.label :"（メイ）" %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="row">
      <div class="col-xs-2  space">
        <%= f.label :department_id, "所属部署名" %>
        <%# 要確認 %>
        <%= f.collection_select :department_id, Department.all, :id, :name, include_blank: '選択してください' %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><p>初期パスワードは社員番号で設定</p>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
