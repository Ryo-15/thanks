<div class="container-fluid yield">
  <div class="row">
    <div class="col-4 offset-4">
      <h2>ユーザー新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :"（ 姓 ）" %>
          <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
          <%= f.label :"（ 名 ）" %>
          <%= f.text_field :first_name , autofocus: true, class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :"（セイ）" %>
          <%= f.text_field :last_name_kana, class:"form-control" %>
          <%= f.label :"（メイ）" %>
          <%= f.text_field :first_name_kana, class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :department_id, "所属部署名" %>
          <%= f.collection_select :department_id, Department.all, :id, :name, include_blank: '選択してください', class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password %><p>初期パスワードは社員番号で設定</p>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-block btn-primary" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>