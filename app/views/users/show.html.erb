<div class="container-fluid yield">
  <div class="row">
    <div class="col-10 offset-1">
      <h3>登録情報</h3>
      <table class="customer_info mb3">
        <thead>
          <th></th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <%# 画像表示がうまくいかない %>
            <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size:"100x100" %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @user.full_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @user.full_name_kana %></td>
          </tr>
          <tr>
            <td>所属部署</td>
            <td><%= @user.department.name  %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
      <% if @user == current_user %>
        <%= link_to "パスワードを変更する", edit_user_registration_path, class: "btn btn-success ml2" %>
        <div>その他個人情報の変更は管理者へご連絡ください</div>
      <% end %>
      <h3>もらったThanks</h3>
      <div>もらったTanaksの件数</div>
      <div>もらったTanaksの内容</div>
    </div>
  </div>
</div>

