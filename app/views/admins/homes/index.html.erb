<div class="container-fluid yield">
  <div class="row">
    <div class="col-12">
      <table class="table table-hover" style="table-layout:fixed;width:100%;">
        <thead class="thead-light">
          <th>送信日時</th>
          <th>送った人</th>
          <th>所属部署</th>
          <th>投稿内容</th>
          <th>受け取った人</th>
          <th>所属部署</th>
          <th>いいね数</th>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td class="col"><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></td>
              <td class="col">
                <%= link_to admins_user_path(post.sender.id) do %>
                  <%= post.sender.full_name %>
                <% end %>
              </td>
              <td class="col"><%= post.sender.department.name %></td>
              <td class="col-5" style="word-wrap:break-word;"><%= post.post %></td>
              <td class="col">
                <%= link_to user_path(post.receiver.id) do %>
                  <%= post.receiver.full_name %>
                <% end %>
              </td>
              <td class="col"><%= post.receiver.department.name %></td>
              <td class="col-1"><%= post.favorites.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="clearfix">
        <%= link_to "CSVエクスポート", admins_index_path(format: :csv), class: "btn btn-warning float-left" %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @posts, class: "pagination" %>
      </div>
    </div>
  </div>
</div>