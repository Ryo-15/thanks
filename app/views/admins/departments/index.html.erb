<div class="container-fluid yield">
	<div class="row">
		<div class="col-8 offset-2">
				<h4 class="section-ttl">所属部署管理</h4>
				<div class="col-4">
					<h5>部署新規登録</h5>
					<%= render 'form', department: @department, url: admins_departments_path, submit: '登録' %>
				</div>
				<div class="">
					<h5>部署一覧</h5>
					<table class="table table-hover">
						<thead class="thead-light">
							<tr>
								<th>部署ID</th>
								<th>部署名</th>
								<th></th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @departments.each do |department| %>
								<tr>
									<td class="align-middle"><%= department.id %></td>
									<td class="align-middle"><%= department.name %></td>
									<td class="text-center"><%= link_to "編集", edit_admins_department_path(department), class: "btn btn-info far fa-edit" %></td>
									<td class="text-center"><%= link_to "削除", admins_department_path(department), method: :delete, class: "btn btn-danger fas fa-trash-alt" %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				<div class="clearfix">
					<%= link_to "CSVエクスポート", admins_departments_path(format: :csv), class: "btn btn-warning float-left" %>
					<div class="float-right">
						<%= form_tag import_admins_departments_path, multipart: true do %>
							<%= file_field_tag :file %>
							<%= submit_tag "CSVインポート", class: "btn btn-primary" %>
						<% end %>
					</div>
		</div>
	</div>
</div>