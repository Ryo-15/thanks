<header>
  <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
      <% if user_signed_in? %>
        <%= link_to "Thanks!", posts_path, class: 'navbar-brand js-scroll-trigger' %>
      <% elsif admin_signed_in? %>
        <%= link_to "Thanks!", admins_top_path, class: 'navbar-brand js-scroll-trigger' %>
      <% else %>
        <%= link_to "Thanks!", root_path, class: 'navbar-brand js-scroll-trigger' %>
      <% end %>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item user_name align-middle">
              <p>ようこそ、<%= attachment_image_tag current_user, :profile_image, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size:"40x40" %><%= current_user.full_name %>さん！</p>
            </li>
            <li class="nav-item"><%= link_to 'Thanks!一覧', posts_path, class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to 'Thanks!を送る', new_post_path, class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to 'ランキング', posts_rank_path, class: 'nav-link js-scroll-trigger' %></li>
            <% if unchecked_notifications.any? %>
              <i class="fa fa-circle notification-circle" style="color: red;"></i>
            <% end %>
            <li class="nav-item"><%= link_to "お知らせ", notifications_path, class: "nav-link js-scroll-trigger" %></li>
            <li class="nav-item"><%= link_to 'マイページ', user_path(current_user), class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link js-scroll-trigger' %></li>
          <% elsif admin_signed_in? %>
            <li class="nav-item"><%= link_to 'チャート', admins_top_path, class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to '投稿一覧（仮）', posts_path, class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to 'ユーザー一覧', admins_users_path, class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to 'ユーザー新規登録', new_user_registration_path, class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to '部署一覧/作成', admins_departments_path, class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to '管理者情報変更', edit_admin_registration_path(current_admin), class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link js-scroll-trigger' %></li>
          <% else %>
            <li class="nav-item"><%= link_to "トップ", root_path, class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to "Thanks!について", about_path, class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: 'nav-link js-scroll-trigger' %></li>
            <li class="nav-item"><%= link_to "お問い合わせ", contact_path, class: 'nav-link js-scroll-trigger' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>