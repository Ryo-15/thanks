<div class="container-fluid yield">
  <div class="row">
    <div class="col-8 offset-2">
      <h1>投稿を編集する</h1>

      <%= form_for(@post) do |f| %>

        <%# エラーメッセージ %>
        <% if @post.errors.any? %>
          <h2><%= @post.errors.count %> errors prohibited this obj from being saved:</h2>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>

        <div class="field">
          <h4>投稿内容</h4>
          <%= f.text_area :post, class:"form-control", rows:"10" %>
        </div>
        <div class ="action">
          <%= f.submit '更新する', class: "btn btn-lg btn-block btn btn-primary" %>
        </div>
      <% end %>

      <%= link_to "投稿詳細に戻る", post_path(@post) %><br>
      <%= link_to "投稿一覧に戻る", posts_path %>
    </div>
  </div>
</div>