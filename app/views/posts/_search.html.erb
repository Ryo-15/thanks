<%= search_form_for search, url: new_post_path do |f| %>
  <%= f.label :name, "ユーザー名" %>
  <%# フルネーム、カナフルネームで検索 %>
  <%= f.search_field :full_name_or_full_name_kana_cont, autofocus: true, placeholder: "送る相手を検索しよう！", class:"form-control" %>
  <%= f.submit "検索", class: "btn btn-block btn btn-primary" %>
<% end %>