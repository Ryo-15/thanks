<div class="container-fluid yield">
  <div class="row">
    <div class="col-10 offset-1">
      <h3>今月のBest Thanks!</h3>
      <h3>たくさんThanks!を受け取った人</h3>
      <table class="table">
        <tbody>
          <% @receiver_ranks.each.with_index(1) do |user, i| %>
            <tr>
              <td><%= i %>位</td>
              <%# リンクにならない %>
              <%= link_to user_path(user.id) do %>
                <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size:"100x100" %></td>
                <td><%= user.full_name %></td>
              <% end %>
              <td><%= user.department.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <h3>たくさんThanks!を送った人</h3>
      <table class="table">
        <tbody>
          <% @sender_ranks.each.with_index(1) do |user, i| %>
            <tr>
              <td><%= i %>位</td>
              <%# リンクにならない %>
              <%= link_to user_path(user.id) do %>
                <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size:"100x100" %></td>
                <td><%= user.full_name %></td>
              <% end %>
              <td><%= user.department.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <h3>最もいいねされたThanks!</h3>
      <% @post_ranks.each.with_index(1) do |post, i| %>
        <%= i %>位
        <%= post.sender.personal_info %>
        <%= post.post %>
        <%= post.receiver.personal_info %>
      <% end %>
    </div>
  </div>
</div>