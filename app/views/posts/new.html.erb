<div class="container-fluid yield">
  <div class="row">
    <div class="col-10 offset-1">
      <h3 class="section-title section-title-sm left">
        <span>ありがとうを送ろう</span>
      </h3>
      <%# 検索フォーム %>
      <%= render 'search', search: @search %>
      <%= form_with(model:@post, url: posts_path, local: true) do |f| %>
        <% if @post.errors.any? %>
          <div id="error_explanation">
            <h2><%= @post.errors.count %>件のエラーが発生しました。</h2>
            <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <%# 非同期で自動選択を実装する %>
        <%# 部署名も表示 %>
        <%= f.collection_select(:receiver_id, @users, :id, :personal_info, include_blank: '送る相手を検索しましょう' ) %><br>
        <%= f.hidden_field :sender_id, :value => current_user.id %>
        <%= f.text_area :post, class:"form-control", rows:"3", placeholder:"ありがとうの気持ちをここに" %>
        <%= f.submit "送信", class:"btn btn-lg btn-block btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>