<div class="card border-right">
  <div class="card-header">
    <%= post.sender.full_name %>さんから<%= post.receiver.full_name %>さんへのThanks!
  </div>
  <div class="card-body">
    <div class="row no-gutters">
      <div class="col-md-3 text-center">
        <div class="">
          <%= link_to user_path(post.sender.id) do %>
            <%= attachment_image_tag post.sender, :profile_image, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size: "160x160" %>
            <h5 class="card-title"><%= post.sender.full_name %></h5>
          <% end %>
          <h6 class="card-subtitle mb-2 text-muted"><%= post.sender.department.name %></h6>
        </div>
      </div>
      <div class="col-md-6 w-100">
        <%= post.post %>
      </div>
      <div class="col-md-3 text-center">
        <%= link_to user_path(post.receiver.id) do %>
          <%= attachment_image_tag post.receiver, :profile_image, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size: "160x160" %>
          <h5 class="card-title"><%= post.receiver.full_name %></h5>
        <% end %>
        <h6 class="card-subtitle mb-2 text-muted"><%= post.receiver.department.name %></h6>
      </div>
    </div>
  </div>
  <div class="card-footer bg-light">
    <% if post.favorited_by?(current_user) %>
        <%= link_to post_favorites_path(post), method: :delete, remote: true do %>
          <i class="fas fa-heart bg-light" aria-hidden="true" style="color: red;"></i>
        <% end %>
        <%= post.favorites.count %>いいね
    <% else %>
        <%= link_to post_favorites_path(post), method: :post, remote: true do %>
          <i class="fas fa-heart bg-light" aria-hidden="true"  style="color: gray;"></i>
        <% end %>
        <%= post.favorites.count %>いいね
    <% end %>
      <i class="far fa-comment bg-light"></i>
      <%= post.post_comments.count %>コメント
    <br>
    <i class="fa fa-calendar bg-light"></i><%= post.created_at.strftime("%Y/%m/%d %H:%M") %>
    <div class="float-right bg-light">
      <% if post.sender == current_user %>
        <%= link_to '編集', edit_post_path(post), class: "btn-sm btn-info far fa-edit" %>
        <%= link_to "削除", post_path(post), method: :delete, class: "btn-sm btn-danger fas fa-trash-alt" %>
      <% end %>
      <small><%= link_to "投稿一覧に戻る", posts_path, class: "btn-sm btn-secondary fas fa-undo-alt" %></small>
    </div>
  </div>
</div>