
<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 col-sm-offset-2">
      <div class="masonry-wrapper-cols">
        <% @posts.each do |post| %>
          <div class="block-content">
            <%# <%= link_to user_path(sender.user_id) do %> %>
              <%= attachment_image_tag post.sender, :profile_image, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size: "80x80" %>
              <%= post.sender.full_name %>
            <%# <% end %> %>
            <%= link_to post_path(post.id) do %>
              <%= post.post %>
            <% end %>
            <%# <%= link_to user_path(receiver.id) do %> %>
              <%= attachment_image_tag post.receiver, :profile_image, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size: "80x80" %>
              <%= post.receiver.full_name %>
            <%# <% end %> %>
            <%# 日時表示にするかは要検討 %>
            <span class="comment-date"><%= post.created_at.strftime('%Y/%m/%d') %></span>
              <li>
                <p class="comment-count">コメント数：<%= post.post_comments.count %></p>
              </li>
            </ul>
          </div>
        <% end %>
        <%= paginate @posts, class: "paginate" %>
      </div>
    </div>
  </div>
</div>